include ../../elements/link/link

mixin profileItem(name, value)
  .profile__item
    if name
      .profile__item-name= name
    if value
      .profile__item-value= value
    if block
      block

.profile
  .profile__header
    .profile__img
      <object data="../assets/icons/img.svg" title="avatar"></object>
    h1.profile__title= 'Иван'
  .profile__main
    +profileItem('Почта', 'pochta@yandex.ru')
    +profileItem('Логин', 'ivanivanov')
    +profileItem('Имя', 'Иван')
    +profileItem('Фамилия', 'Иванов')
    +profileItem('Имя в чате', 'Иван')
    +profileItem('Телефон', '+7 (909) 967 30 30')
  .profile__footer
    +profileItem()
      +link('#', 'Изменить данные')
    +profileItem()
      +link('#', 'Изменить пароль')
    +profileItem()
      +link('/', 'Выйти', 'link--red')
