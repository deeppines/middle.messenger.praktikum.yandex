{
  "name": "pines-chat",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deeppines/middle.messenger.praktikum.yandex"
  },
  "engines": {
    "node": ">= 14"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "start": "npm i && npm run build && node ./server.js",
    "webpack": "./node_modules/.bin/webpack && npx webpack serve",
    "dev": "parcel ./src/pages/**/*.html --port 3000",
    "build": "parcel build ./src/pages/*.html ./src/pages/**/*.html --no-scope-hoist --no-source-maps --no-cache",
    "test": "mocha --require ts-node/register --require tsconfig-paths/register src/**/*.spec.ts",
    "mocha": "./node_modules/.bin/mocha",
    "mock": "node ./mock/server.js",
    "lint": "tsc --noEmit && eslint --fix ./src/**/*.ts && npx stylelint ./src/**/*.scss --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@parcel/config-default": "2.6.0",
    "@parcel/packager-raw-url": "2.6.0",
    "@parcel/transformer-pug": "2.6.0",
    "@parcel/transformer-sass": "2.6.0",
    "@parcel/transformer-webmanifest": "2.6.0",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.42",
    "@types/sinon": "10.0.11",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "chai": "4.3.6",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "8.17.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "express": "4.18.1",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "json-server": "0.17.0",
    "mini-css-extract-plugin": "2.6.0",
    "mocha": "10.0.0",
    "mocha-jsdom": "2.0.0",
    "nanoid": "4.0.0",
    "npm-run-all": "4.1.5",
    "parcel": "2.6.0",
    "parcel-packager-svg-sprite": "2.0.0",
    "parcel-transformer-pug-precompile": "1.0.6",
    "parcel-transformer-svg-sprite": "2.0.0",
    "pug-loader": "2.4.0",
    "sass": "1.52.3",
    "sass-loader": "13.0.0",
    "sinon": "14.0.0",
    "stylelint": "14.9.1",
    "stylelint-config-standard-scss": "4.0.0",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.3",
    "webpack": "5.73.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "^4.9.2"
  },
  "alias": {
    "src": "./src"
  }
}
