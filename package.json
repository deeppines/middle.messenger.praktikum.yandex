{
  "name": "pines-chat",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deeppines/middle.messenger.praktikum.yandex"
  },
  "engines": {
    "node": ">= 14"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "dev": "parcel ./src/pages/*.pug --port 3000",
    "build": "parcel build ./src/pages/*.pug --no-source-maps --no-cache",
    "lint": "tsc --noEmit && eslint --fix ./src/**/*.ts && npx stylelint ./src/**/*.scss --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@parcel/config-default": "2.3.2",
    "@parcel/packager-raw-url": "2.3.2",
    "@parcel/transformer-pug": "2.3.2",
    "@parcel/transformer-sass": "2.3.2",
    "@parcel/transformer-webmanifest": "2.3.2",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.9.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "express": "4.17.3",
    "husky": "7.0.4",
    "parcel": "2.3.2",
    "stylelint": "14.5.1",
    "stylelint-config-standard-scss": "3.0.0",
    "typescript": "4.5.5"
  }
}
